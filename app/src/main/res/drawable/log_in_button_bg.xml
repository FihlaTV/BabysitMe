<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" android:color="@color/colorPrimaryDark">
    <item android:state_focused="true">
        <shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle">
            <solid android:color="@color/button_focused" />
            <corners android:radius="@dimen/radius_button" />
            <stroke android:width="@dimen/horizontal_divider_height" android:color="@color/stroke_button" />
        </shape>
    </item>

    <item android:state_pressed="true">
        <shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle">
            <solid android:color="@color/button_fill_pressed" />
            <corners android:radius="@dimen/radius_button" />
            <stroke android:width="@dimen/horizontal_divider_height" android:color="@color/stroke_button" />
        </shape>
    </item>

    <item android:id="@android:id/background">
        <shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle">
            <solid android:color="@color/button_fill" />
            <corners android:radius="@dimen/radius_button" />
            <stroke android:width="@dimen/horizontal_divider_height" android:color="@color/stroke_button" />
        </shape>
    </item>
</selector>