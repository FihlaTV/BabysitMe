<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/widget_margin">

    <LinearLayout
        android:id="@+id/widget_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/vertical_margin"
        android:background="@color/colorWidgetBg"
        android:minHeight="@dimen/min_height_widget_label"
        android:orientation="horizontal"
        android:padding="@dimen/horizontal_margin">

        <LinearLayout
            android:layout_width="@dimen/zero_margin"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:orientation="vertical">

            <TextView
                android:id="@+id/appwidget_hello"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/widget_margin"
                android:contentDescription="@string/appwidget_text"
                android:text="@string/appwidget_text"
                android:textColor="@android:color/white"
                android:textSize="@dimen/h5_size" />

            <TextView
                android:id="@+id/appwidget_appointments_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="@dimen/widget_margin"
                android:contentDescription="@string/appwidget_text"
                android:text="@string/appointments_label_widget"
                android:textColor="@android:color/white"
                android:textSize="@dimen/huge_font" />
        </LinearLayout>

        <ImageView
            android:layout_width="@dimen/zero_margin"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:clickable="false"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_baby" />

    </LinearLayout>

    <ListView
        android:id="@+id/widget_appointment_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:listSelector="@android:color/transparent" />

</LinearLayout>