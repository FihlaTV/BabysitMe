<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root_frame_layout_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/vertical_margin"
    android:background="@color/colorWidgetBg"
    android:clickable="false"
    android:gravity="center_vertical"
    android:minHeight="@dimen/min_height_widget_item"
    android:orientation="vertical"
    android:paddingEnd="@dimen/vertical_margin"
    android:paddingStart="@dimen/vertical_margin">

    <TextView
        android:id="@+id/day"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/white"
        android:textSize="@dimen/large_font" />

    <TextView
        android:id="@+id/specific_date_or_every_week"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:textColor="@android:color/white"
        android:textSize="@dimen/large_font" />

    <TextView
        android:id="@+id/time_period"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/day"
        android:textColor="@android:color/white"
        android:textSize="@dimen/small_font" />

</RelativeLayout>