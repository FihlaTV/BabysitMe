<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    android:layout_gravity="center"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <RadioGroup
        android:id="@+id/radio_group_upload"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingEnd="@dimen/divider_margin"
        android:paddingStart="@dimen/divider_margin">

        <RadioButton
            android:button="@drawable/ic_photo_camera"
            android:id="@+id/radio_capture"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:focusable="true"
            android:text="@string/take_photo" />

        <RadioButton
            android:button="@drawable/ic_gallery"
            android:id="@+id/radio_gallery"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/horizontal_margin"
            android:focusable="true"
            android:text="@string/gallery" />

    </RadioGroup>
</FrameLayout>