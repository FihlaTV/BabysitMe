<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginBottom="@dimen/horizontal_margin"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/radius_button"
        app:cardBackgroundColor="@color/icons"
        android:background="@color/transparent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/horizontal_margin"
            android:paddingTop="@dimen/horizontal_margin"
            android:layout_marginEnd="@dimen/horizontal_margin"
            android:layout_marginStart="@dimen/horizontal_margin">


            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/photo"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="@dimen/horizontal_margin"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:src="@drawable/ic_launcher_background"
                app:riv_border_width="@dimen/zero_margin"
                app:riv_corner_radius="40dp"
                app:riv_border_color="@color/transparent" />

            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/photo"
                tools:text="LALALALLALALAL"
                android:textSize="@dimen/h5_size"/>

            <TextView
                android:id="@+id/price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/photo"
                android:layout_below="@+id/name"
                android:layout_marginTop="@dimen/vertical_margin"
                tools:text="llsslslslsls"
                android:textSize="@dimen/large_font"/>

            <TextView
                android:id="@+id/currency"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/horizontal_margin"
                android:layout_toEndOf="@+id/price"
                android:layout_below="@+id/name"
                android:layout_marginTop="@dimen/vertical_margin"
                tools:text="euro"
                android:textSize="@dimen/large_font"/>
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>